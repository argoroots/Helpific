extends layout

block header
    .row
        a(href='/')
            img.col-xs-4.col-sm-2.col-md-1.col-xs-offset-4.col-sm-offset-5.col-md-offset-0(src='/images/helpific-logo-text.png', alt='Helpific logo')
        h1.col-xs-12.col-md-10.text-center Profiles

block content
    #search.row(ng-controller='searchCtrl')
      form.form-group.col-xs-10.col-sm-8.col-md-6.col-xs-offset-1.col-sm-offset-2.col-md-offset-3
        label.col-xs-1(for='search-input')
          i.fa.fa-search
        input.col-xs-10.text-center(id='search-input', type='search', placeholder='', ng-model='search_query' autofocus)

    .row
        each p in profiles
            a.col-xs-12(href='/profiles/'+p.id)= p.name
