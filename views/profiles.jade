extends layout

block content
    .container
        //- #search.row(ng-controller='searchCtrl')
        //-   form.form-group.col-xs-10.col-sm-8.col-md-6.col-xs-offset-1.col-sm-offset-2.col-md-offset-3
        //-     label.col-xs-1(for='search-input')
        //-       i.fa.fa-search
        //-     input.col-xs-10.text-center(id='search-input', type='search', placeholder='', ng-model='search_query' autofocus)

        each p, i in profiles.sort(function(obj1, obj2) { return obj1.forename + obj1.surname > obj2.forename + obj2.surname })
            .row
                .col-xs-12.col-sm-10.col-sm-offset-1
                    a(href='/users/' + p.id)
                        img.col-xs-6.col-sm-3.col-md-2.img-circle(src=p.photo, alt=p.forename, class=(i % 2 == 0) ? 'pull-left' : 'pull-right', style='margin-bottom:20px')
                    .col-xs-12.col-sm-9.col-md-10(class=(i % 2 == 0) ? '' : 'text-right')
                        a(href='/users/' + p.id)
                            h3= p.forename + ' ' + p.surname
                        p= p.topic
                        p(style='font-style:italic')
                            | #{p.town}
                            if p.county && p.town
                                | ,
                            |  #{p.county}
            .row.spacer
