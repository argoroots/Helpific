extends layout

block vars
    - title = t('pages.sign-in.title')

block content
    .container
        .row
            .jumbotron.col-xs-12.text-center
                p= t('pages.sign-in.text')

        .row
            .col-xs-12.text-center
                a(href='signin/facebook', title='Facebook')
                    i.signin.fa.fa-facebook-square.fa-5x(style='color:#3b5998')

                a(href='signin/google', title='Google')
                    i.signin.fa.fa-google-plus-square.fa-5x(style='color:#dd4b39')

        .row.spacer

        .row
            .col-xs-12.text-center
                p!= t('pages.sign-in.terms')
