extends layout

block content
    .container
        if contents
            .row
                .jumbotron.col-xs-12.text-center!= md(contents)

        .row
            .col-xs-12.text-center
                a(href='/signin/facebook', title='Facebook')
                    i.signin.fa.fa-facebook-square(style='color:#3b5998')

                a(href='/signin/google', title='Google')
                    i.signin.fa.fa-google-plus-square(style='color:#dd4b39')

