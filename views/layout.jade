doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= (title && title !== 'Helpific') ? title + ' - Helpific' : 'Helpific'

        link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Raleway')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
        link(rel='icon', type='image/png', href='/images/helpific-logo.png')

        script(src='https://code.jquery.com/jquery-2.1.4.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    body
        #wrap
            #main
                nav.navbar.navbar-default.navbar-fixed-top
                    .container
                        .navbar-header
                            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            if title
                                a.navbar-brand(href='/')
                                    img(src='/images/helpific-logo-text-hr.png', alt='Helpific logo')
                        .collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href='/profiles') Profiles
                                li
                                    a(href='/partners') Partners
                                li
                                    a(href='/team') Team
                                li
                                    a(href='/terms') Terms
                                li
                                    if user
                                        a(href='/signin/exit') Sign Out
                                    else
                                        a(href='/signin') Sign In

                .container
                    a.row(href='/')
                        if !title
                            img.col-xs-6.col-sm-4.col-md-2.col-xs-offset-3.col-sm-offset-4.col-md-offset-5(src='/images/helpific-logo-text.png', alt='Helpific logo')
                    if title
                        .row
                            h1.col-xs-12.text-center
                                span.col-xs-12= pretitle
                                | #{title}

                block content

