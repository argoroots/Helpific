doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title= (title && title !== 'Helpific') ? title + ' - Helpific' : 'Helpific'

        link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Raleway')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
        link(rel='icon', type='image/png', href='/images/helpific-logo.png')

        script(src='https://code.jquery.com/jquery-2.1.4.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    body
        #wrap
            #main
                nav.navbar.navbar-default
                    .container
                        .navbar-header
                            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            if title
                                a.navbar-brand.hidden-xs(href='/')
                                    img(src='/images/helpific-logo-text-hr.png', alt='Helpific logo', style='height:100%')
                        .collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href='/profiles') Profiles
                                li
                                    a(href='/partners') Partners
                                li
                                    a(href='/team') Team
                                li
                                    a(href='/terms') Terms
                                li
                                    if user
                                        a(href='/user/signout') Sign Out
                                    else
                                        a(href='/user/signin') Sign In

                .container
                    a.row(href='/')
                        if title
                            img.visible-xs.col-xs-4.col-xs-offset-4(src='/images/helpific-logo-text.png', alt='Helpific logo')
                        else
                            img.col-xs-4.col-sm-4.col-md-2.col-xs-offset-4.col-sm-offset-4.col-md-offset-5(src='/images/helpific-logo-text.png', alt='Helpific logo')

                    .row
                        h1.col-xs-12.text-center
                            span.col-xs-12= pretitle
                            | #{title}

                .container
                    block content

        footer.container
            .row
                .col-xs-12
                    hr
            .row
                .col-xs-12.text-center
                    a(href='https://www.facebook.com/Helpific', target='_blank')
                        i.fa.fa-facebook-square.social(style='color:#3b5998')
                    a(href='https://www.twitter.com/helpific', target='_blank')
                        i.fa.fa-twitter-square.social(style='color:#00aced')
                    a(href='https://helpificeesti.blogspot.com/', target='_blank')
                        i.fa.fa-rss-square.social(style='color:#f57d00')
                    a(href='http://www.enjoygram.com/tag/helpific', target='_blank')
                        i.fa.fa-instagram.social(style='color:#517fa4')
                    a(href='https://www.linkedin.com/company/helpific', target='_blank')
                        i.fa.fa-linkedin-square.social(style='color:#007bb6')
                    a(href='https://www.pinterest.com/helpific/', target='_blank')
                        i.fa.fa-pinterest-square.social(style='color:#cb2027')
                    a(href='http://helpific.tumblr.com/', target='_blank')
                        i.fa.fa-tumblr-square.social(style='color:#32506d')
                    a(href='https://www.youtube.com/channel/UC0b5JqEQXdZuex5TNKSpoug', target='_blank')
                        i.fa.fa-youtube-square.social(style='color:#bb0000')
