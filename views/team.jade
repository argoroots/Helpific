extends layout

block content
    each p, i in team.sort(function(obj1, obj2) { return obj1.name > obj2.name })
        .row
            .col-xs-12.col-sm-10.col-sm-offset-1
                img.col-xs-6.col-sm-3.col-md-2(src=p.photo, alt=p.name, class=(i % 2 == 0) ? 'pull-left' : 'pull-right')
                .col-xs-12.col-sm-9.col-md-10.text-justify(class=(i % 2 == 0) ? '' : 'text-right')
                    h3= p.name
                    if p.info
                        div!= md(p.info)
        .spacer
