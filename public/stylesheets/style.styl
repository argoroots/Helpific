footer-height = 300px

html
    height 100%



body
    height 100%
    color #585858
    font-family 'Montserrat', sans-serif
    font-size 16px



#wrap
    min-height 100%



#main
    overflow auto
    padding-bottom footer-height * 1.5 /* this needs to be bigger than footer height*/



header
    margin-top 50px
    margin-bottom 50px



footer
    position relative
    margin-top footer-height * -1 /* negative value of footer height */
    height footer-height
    clear both
    padding-top 20px



a
    color #cd5c5c
    text-decoration underline

    &:hover
        color #cd5c5c
        text-decoration none



h1
    color #55938e
    font-size 64px
    font-weight normal
    height auto
    letter-spacing -4px

    span
        font-size 32px
        font-weight normal
        height auto
        letter-spacing -2px



h2
    color #55938e
    font-size 32px
    font-weight normal
    height auto
    letter-spacing -2px



.jumbotron
    background #ffffff



#search
    margin-top 40px
    margin-bottom 80px

    .form-group
        border-bottom solid 1px #55938e

    label
        padding 0px
        z-index 10

        i
            color #55938e
            font-size 25px

    input
        margin-bottom 5px
        padding 0px
        color #55938e
        border none
        outline none
        font-weight normal



ul.nav-pills
    margin-bottom 50px

    li
        a
            padding-top 25px
            padding-bottom 25px
            color #ffffff
            font-size 20px
            text-decoration none

            &:hover, &:active, &:focus
                padding-top 22px
                background none !important
                border-top solid 3px #ffffff
                border-radius 0px
                color #ffffff
                text-decoration none



.spacer
    height 100px



i.social
    font-size 40px
    margin 5px
