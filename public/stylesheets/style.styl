  color color-gray-transparent

#feedback-open
  z-index 1000
  position fixed
  bottom 20px
  right 20px
  color color-helpific-red
  text-shadow 0px 0px 10px color-gray-transparent
  cursor pointer

#feedback-close
  margin -10px -30px 0px -5px
  float left
  cursor pointer

#feedback
  z-index 1000
  position fixed
  bottom 20px
  right 20px
  max-width 500px
  color color-white
  background-color color-helpific-red
  border-radius 6px
  box-shadow 0px 0px 10px color-gray-transparent

  h2
    margin 20px
    padding 0px
    color color-white

  label
    margin-top 0px !important

  input
  textarea
    border none !important

    &:focus
      border none !important
      outline 0px

  a
    margin-top 10px
    margin-bottom 20px
    color color-white
    font-weight bold

@media (max-width: 768px)
  #feedback
    margin 0px
    bottom 0px
    left 0px
    right 0px
    max-width none
    border-radius 0px

footer
