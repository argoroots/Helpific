header-height = 100px
header-height-xs = 50px
footer-height = 200px

screen-sm-min = 768px
screen-md-min = 992px
screen-lg-min = 1200px

color-helpific-red = rgb(241, 101, 73)
color-helpific-green = rgb(87, 147, 144)
color-helpific-yellow = rgb(252, 185, 76)

color-helpific-red-transparent = rgba(241, 101, 73, 0.2)
color-helpific-green-transparent = rgba(87, 147, 144, 0.2)
color-helpific-yellow-transparent = rgba(252, 185, 76, 0.2)

color-white = #ffffff
color-white-transparent = rgba(255, 255, 255, 0.97)

color-gray = #ababab
color-gray-dark = #585858
