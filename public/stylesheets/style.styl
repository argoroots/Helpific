html
  height 100%

body
  height 100%
  color color-gray-dark
  font-family 'Raleway', sans-serif
  font-size 16px
  letter-spacing 1px

#wrap
  min-height 100%

#main
  overflow auto
  padding-bottom footer-height

/* this needs to be bigger than footer height*/

.navbar
  min-height header-height
  background color-white-transparent
  border none

  .navbar-header
    min-height header-height

    .navbar-brand
      display block
      height header-height !important
      overflow hidden
      white-space nowrap
      color color-helpific-green
      font-size 37px
      text-overflow ellipsis !important
      letter-spacing -1px !important

      img
        padding-top 5px
        padding-right 10px
        height header-height - 35px !important

  .navbar-collapse
    max-height 600px
    border none

  .navbar-toggle
    margin-top 33px
    border none

  .navbar-nav
    li
      a
        padding-top 0px
        padding-bottom 0px
        line-height header-height
        text-decoration none

        &:hover
          text-decoration underline

    .dropdown
      font-size 20px

    .dropdown-menu
      margin-top -30px !important
      margin-right 10px !important
      padding 0px
      background color-white
      border 1px solid color-gray-light
      border-top 1px solid color-gray-light
      border-radius 3px
      box-shadow none

      li
        a
          line-height 40px !important

          &:hover
            text-decoration none
            background color-gray-light !important

      .divider
        margin 0px !important
        background-color color-gray-light !important

    .open
      a
        background none !important

.navbar-border
  border-bottom 1px solid color-gray-light

@media (max-width: 767px)
  .navbar-brand
    width 80%

@media (min-width: 768px) and (max-width: 992px)
  .navbar-brand
    width 660px

@media (min-width: 992px) and (max-width: 1199px)
  .navbar-brand
    width 420px

@media (min-width: 1200px) and (max-width: 1399px)
  .navbar-brand
    width 220px

@media (min-width: 1400px)
  .navbar-brand
    width 420px

@media (max-width: 1199px)
  .navbar-header
    float none

  .navbar-text
    float none
    margin 15px 0

  .navbar-toggle
    display block

  .navbar-collapse.collapse
    display none !important

  .navbar-collapse.collapse.in
    display block !important

  .navbar
    min-height header-height-xs

    .navbar-nav
      min-height 100%
      float none !important
      margin 0px -15px
      border-bottom 1px solid color-gray-light !important

      li
        float none

        a
          line-height 20px
          padding-top 0px !important
          padding-bottom 0px !important
          line-height header-height-xs
          text-align center

      .dropdown-toggle
        display none

      .dropdown-menu
        display block
        position static
        float none
        margin-top 0px !important
        margin-right 0px !important
        background none
        border none !important
        border-top 1px solid color-gray-light !important
        border-bottom 1px solid color-gray-light !important

        .divider
          display none

  .collapsing
    overflow hidden !important

#title
  margin-top header-height + 20px
  margin-bottom 50px

#cover
  padding-top 280px
  color color-white
  background-image url('/images/tom.jpg')
  background-position center top
  background-size cover
  background-repeat no-repeat
  height 550px
